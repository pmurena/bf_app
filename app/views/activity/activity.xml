<Page loaded="loaded">
    <ActionBar title="{{ name }}">
    </ActionBar>
    <StackLayout>
    	<ScrollView orientation="vertical">
    		<StackLayout>
		    	<Image row="0" col="0" src="https://static01.nyt.com/images/2017/11/13/sports/13INDOOR-INYT1/13INDOOR-INYT1-facebookJumbo.jpg" class="activity-image" stretch="aspectFill" />
			    <GridLayout rows="auto, auto" columns="*">
			    	<Label id="name" text="{{ location }}" row="0" horizontalAlignment="left" verticalAlignment="center" class="title"/>
		    		<Label id="subtitle" text="Attending: 0" row="1" horizontalAlignment="left" verticalAlignment="center" class="subtitle"/>
		    		
			    </GridLayout>
			    <Label text="{{ description }}" textWrap="true" horizontalAlignment="left" verticalAlignment="center" class="description"/>
			</StackLayout>
		</ScrollView>
	</StackLayout>
</Page>
