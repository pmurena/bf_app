<Page loaded="loaded">
	<ActionBar title="BuddyFinder - Sign Up">
    </ActionBar>
    <StackLayout orientation="vertical">
    	<TextField hint="Username" text="{{ username }}" autocorrect="false" autocapitalizationType="none" />
    	<TextField hint="Email Address" text="{{ email }}"  keyboardType="email" autocorrect="false" autocapitalizationType="none" />
		<TextField hint="Password" text="{{ password }}"  secure="true" />
		<TextField hint="Confirm Password" text="{{ password_confirm }}"  secure="true" />

		<Button text="Sign up for Buddyfinder" class="signUp" tap="signUp"/>
    </StackLayout>
</Page>
