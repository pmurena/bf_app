<Page loaded="loaded">
	<ActionBar title="BuddyFinder - Profile">
  	<ActionItem text="Edit" tap="edit" android.systemIcon="ic_menu_edit" />
  </ActionBar>
		<GridLayout rows="auto, auto" columns="*">
			<stack-layout row="0" orientation="horizontal">
				<Image src="https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg" class="profile-image"/>
      	<TextField text="{{ profile.firstname }}" id="fname" class="name" />
      	<TextField text="{{ profile.lastname }}" id="lname" class="name" />
			</stack-layout>
			<stack-layout row="1" orientation="vertical" >
      	<TextVie colspan="2" text="{{ profile.description }}" id="tline" class="info" />
      	<TextField colspan="2" text="{{ profile.canton }}" class="info" />
      	<TextField colspan="2" text="{{ profile.country }}" class="info" />
      	<TextField colspan="2" text="{{ profile.email }}" class="info" />
      	<TextField colspan="2" text="{{ profile.website }}" class="info" />
      	<TextField colspan="2" text="{{ profile.phone }}" class="info" />
			</stack-layout>
		</GridLayout>
</Page>
