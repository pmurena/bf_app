<Page loaded="loaded">
    <ActionBar title="BuddyFinder">
        <ActionItem text="New" tap="newActivity" />
    </ActionBar>
    <GridLayout rows="auto, *" columns="2*, *">
        <ListView items="{{ activities }}" id="activities" itemTap="showActivity" row="1" colSpan="2">
            <ListView.itemTemplate>
                <Label id="name" text="{{ name }}" horizontalAlignment="left" verticalAlignment="center"/>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>
